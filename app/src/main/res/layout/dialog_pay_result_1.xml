<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/iv_pay_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_failed"/>

    <TextView
        android:id="@+id/tv_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment failed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="@color/colorTheme"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_pay_image"
        android:layout_alignRight="@+id/iv_pay_image"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/tv_pay_result"
        android:text="Sorry, pay interest fail, you lose one chance to loan, please complete within the specified time. After pay success your loan amount will arrive in your bank account within 10 minutes. Please try again."
        android:textSize="12sp"
        android:textColor="#454545"
        android:layout_marginTop="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRY AGAIN"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
       android:layout_alignBottom="@+id/iv_pay_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>