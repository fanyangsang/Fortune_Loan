<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/iv_pay_image"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_seccessful"/>
    
    <TextView
        android:id="@+id/tv_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment successful"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorTheme"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_pay_image"
        android:layout_alignRight="@+id/iv_pay_image"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tv_pay_result"
        android:text="Congratulations, presaving interest received,check loan progress in your wallet bill, check out more loan app.  "
        android:textSize="15sp"
        android:textColor="#454545"
        android:layout_marginTop="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
       android:layout_alignBottom="@+id/iv_pay_image"
        android:layout_centerHorizontal="true"
       android:layout_marginBottom="30dp"/>

</RelativeLayout>